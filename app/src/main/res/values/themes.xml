<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
    </style>
    <style name="СardviewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <style name="ImageVieStyleMoon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/moon</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ImageVieStyleTransfer" parent="ImageVieStyleMoon">
        <item name="android:src">@drawable/transfer</item>
    </style>

    <style name="ImageVieStyleAddcard" parent="ImageVieStyleMoon">
        <item name="android:src">@drawable/group</item>
    </style>

    <style name="DarkTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>





    <style name="ImageVieStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>




    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!-- Устанавливаем цвет фона -->
        <item name="android:background">@color/white</item>
        <!-- Другие настройки темы... -->
    </style>

</resources>